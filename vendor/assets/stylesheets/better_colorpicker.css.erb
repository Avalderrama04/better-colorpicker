@charset "UTF-8";

.colorpicker {
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;

	-webkit-box-sizing: content-box;
	-moz-box-sizing: content-box;
	box-sizing: content-box;

	position: absolute;
	display: block;
	cursor: default;

	border: thin solid #ABABAB;
	border-radius: 3px;
	padding: 3px;
	background-color: #FFF;

	width: 133px;

	z-index: 1;
}

.colorpicker-hidden .colorpicker{
	visibility: hidden;
}

.colorpicker-visible .colorpicker {
	visibility: visible;
}

.colorpicker .sv-picker, .colorpicker .h-picker, .colorpicker .preview, .colorpicker .mbutton {
	float: left;
	position: relative;
	overflow: none;
	z-index: 1;
}

.colorpicker .sv-picker, .colorpicker .h-picker {
	cursor: crosshair;
}

.colorpicker .sv-picker {
	width: 110px;
	height: 110px;
}

.colorpicker .h-picker {
	width: 20px;
	height: 110px;
	margin-left: 3px;
}

.colorpicker .preview {
	-webkit-box-sizing: content-box;
	-moz-box-sizing: content-box;
	box-sizing: content-box;

	border: 1px solid;
	width: 131px;
	height: 13px;
	margin-top: 3px;
	float: left;
}

/* colorpicker background color layers */

.colorpicker .background {
	position: absolute;
	width: inherit;
	height: inherit;
	z-index: 2;
}

.colorpicker .sv-picker .background {
	background-color: #F00;
}

.colorpicker .preview .background {
	background-color: #F00;
}

/* colorpicker gradient overlay layers */

.colorpicker .gradient {
	position: absolute;
	width: inherit;
	height: inherit;
	z-index: 3;
}

.colorpicker .sv-picker .gradient {
	background-image: url(<%= image_path('sv-picker.png')%>);
}

.colorpicker .h-picker .gradient {
	background-image: url(<%= image_path('h-picker.png')%>);
}

/* colorpicker horizontal and vertical underlines */

.colorpicker .h.sline {
	position: absolute;
	margin-top: -1px;
	background-color: rgba(0, 0, 0, 0.25);
	height: 3px;
	width: inherit;
	z-index: 4;
}

.colorpicker .v.sline {
	position: absolute;
	margin-left: -1px;
	background-color: rgba(0, 0, 0, 0.25);
	width: 3px;
	height: inherit;
	z-index: 4;
}

/* colorpicker horizontal and verical lines */

.colorpicker .h.line {
	position: absolute;
	background-color: #FFF;
	height: 1px;
	width: inherit;
	z-index: 5;
}

.colorpicker .v.line {
	position: absolute;
	background-color: #FFF;
	width: 1px;
	height: inherit;
	z-index: 5;
}

/* buttons for saving and closing */

.colorpicker .mbutton {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;

	border-top: 1px solid #ABABAB;
	border-bottom: 1px solid #ABABAB;
	border-right: 1px solid #ABABAB;
	margin-top: 3px;
	text-align: center;
	padding: 4px 0;
}

.colorpicker .mbutton.msubmit {
	width: 67px;
	border-left: 1px solid #ABABAB;
	border-radius: 3px 0 0 3px;
}

.colorpicker .mbutton.mcancel {
	width: 66px;
	border-radius: 0 3px 3px 0;
}

.colorpicker .mbutton:hover {
	background-color: #ABABAB;
	color: #FFF;
}